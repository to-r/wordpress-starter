{
  "name": "wp-template",
  "repository": "git@github.com:to-r/wp-template.git",
  "author": "Katsushi OUGI <ougi@to-r.net>",
  "license": "MIT",
  "scripts": {
    "wp-env": "wp-env",
    "start:tailwind": "tailwindcss -i ./wp-content/themes/my-theme/assets/css/_main.css -o ./wp-content/themes/my-theme/assets/css/main.css --watch",
    "start:bs": "browser-sync start --config bs-config.js",
    "start": "run-p start:*",
    "build:tailwind": "tailwindcss -i ./wp-content/themes/my-theme/assets/css/_main.css -o ./wp-content/themes/my-theme/assets/css/main.css --minify",
    "build": "run-p build:*",
    "eslint": "eslint --fix ./wp-content/themes/**/*.js"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/eslint-parser": "^7.18.9",
    "@wordpress/env": "^5.2.0",
    "browser-sync": "^2.27.10",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.2.7"
  },
  "browserslist": [
    "> 2%"
  ],
  "dependencies": {}
}
